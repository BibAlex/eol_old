- # Partial rendered within collections page by 'collections/edit_collection_item partial' when JS enabled.
- parent_form.fields_for :collection_items, collection_item do |item_form|
  %fieldset
    = item_form.label :annotation
    = item_form.text_area :annotation
    = item_form.load_minimal_tags_allowed
    = item_form.label :collection_item_date
    = item_form.text_field :collection_item_date
    = item_form.label :refs
    = text_area_tag 'references', @references
    - # TODO: figure out why I18n is not getting the label value automatically for sort_field: label value should override attribute value.
    = item_form.label :sort_field, I18n.t('helpers.label.collection_item.sort_field')
    = item_form.text_field :sort_field
    %p= I18n.t('helpers.label.collection_item.sort_field_more')
  %fieldset.actions
    = submit_tag I18n.t(:save_annotation_submit_button), :name => :commit_annotation
    = link_to I18n.t(:cancel), '#'
