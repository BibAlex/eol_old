- if collection_item.collection_item_date
  .annotation
    %p= I18n.t(:date_caps) + ": " + collection_item.collection_item_date.to_s unless collection_item.collection_item_date.nil?
- unless collection_item.refs.blank?  
  = I18n.t :references_cabs
  - collection_item.refs.each do |ref|
    %br
    = link_to ref.full_reference, ref.full_reference

- if collection_item.annotation
  .annotation
    %p= collection_item.annotation
- # TODO: .references go here
- unless collection_item.sort_field.blank?
  %p.sort_value
    %strong= I18n.t('helpers.label.collection_item.sort_field_show')
    = collection_item.sort_field
- if item_editable
  %p.edit
    = link_to I18n.t(:edit_annotation), edit_collection_item_path(collection_item, :return_to => current_url)
  .collection_item_form
