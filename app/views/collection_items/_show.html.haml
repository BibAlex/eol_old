- view_style ||= 'default'
- item_type ||= en_type(collection_item)
- item_editable ||= false
- if logged_in?
  - if collection_item
    .checkbox
      = check_box_tag "collection_items[]", collection_item.id, @selected_collection_items.include?(collection_item.id.to_s), :id => "collection_item_#{collection_item.id}"

- if ['image_map', 'image', 'video', 'sound'].include?(item_type)
  = render :partial => "shared/item_summary_media.html.haml", :locals => {:item => collection_item.object, :collection_item_date => collection_item.collection_item_date, :collection_item_refs => collection_item.refs ,:en_type => item_type, :view_style => view_style}
- elsif ! item_type.blank?
  = render :partial => "shared/item_summary_#{item_type}.html.haml", :locals => {:item => collection_item.object, :collection_item_date => collection_item.collection_item_date, :collection_item_refs => collection_item.refs, :view_style => view_style}
- else
  = I18n.t(:item_details_missing)

- unless ['image_gallery','names_only'].include?(view_style)
  - if collection_item
    .editable
      = render :partial => 'collection_items/show_editable_attributes', :locals => { :collection_item => collection_item,
        :item_editable => item_editable }
